@{
  Layout = "_Layout";
}

@using BestRestaurant.Models

<h2>Search Results</h2>

@if (Model.Count == 0)
{
  <p>No Restaurants Found</p>
}

@foreach (Restaurant restaurant in Model)
{
  <p>@Html.ActionLink($"{@restaurant.Name}", "Details", "Restaurants", new { id = restaurant.RestaurantId })</p>
}

@Html.ActionLink("Take me home", "Index", "Home")