@{
  Layout = "_Layout";
}

@using BestRestaurant.Models

<h2>Restaurants</h2>

@if (Model.Count == 0)
{
  <p>No Restaurants</p>
}

@foreach (Restaurant restaurant in Model)
{
  @Html.ActionLink($"{@restaurant.Name}", "Details", new { id = restaurant.RestaurantId })
}

@Html.ActionLink("Take me home", "Index", "Home")